<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/grey"

        >
        <EditText
            style="@style/head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5       рейтинг"
            android:layout_weight="0.3"
            />
        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="@dimen/size_medium_56"
            android:layout_gravity="center"
            android:background="@color/white"/>

        <EditText
            style="@style/head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="25              строчек кода"
            android:layout_weight="0.4"/>
        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="@dimen/size_medium_56"
            android:layout_gravity="center"
            android:background="@color/white"/>
        <EditText
            style="@style/head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5     проектов"
            android:layout_weight="0.3"/>

    </LinearLayout>




    <!--мобтел-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Мобильный телефон"
                    android:inputType="phone"
                    android:text="+7912 345 67 88"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="@dimen/size_small_24"
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"/>
        <!--          style="@style/icon.right" -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    <!-- email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e-mail"
                    android:inputType="textEmailAddress"
                    android:text="Mymail@yandex.ru"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="@dimen/size_small_24"
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"/>
        <!--          style="@style/icon.right" -->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>


    <!-- VK -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/vkontakte"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/vk_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Аккаунт в VK"
                    android:inputType="textUri"
                    android:text="vk.com/id000000"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="@dimen/size_small_24"
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"/>
        <!--          style="@style/icon.right" -->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    <!-- github -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/github"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/github_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Репозиторий"
                    android:inputType="textUri"
                    android:text="github.com/evgenik1/DevIntensive"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="@dimen/size_small_24"
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"/>
        <!--          style="@style/icon.right" -->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>

    <!-- about -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/about_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="О Себе"
                    android:inputType="text"
                    android:text="О Себе О СЕБЕ"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="@dimen/size_small_24"
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"/>
        <!--          style="@style/icon.right" -->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"/>


</LinearLayout>






